<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prototype"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A20"
    tools:context=".Flashcard">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#6750A4"
        android:textSize="30dp"
        android:text="â¬…ï¸"
        android:textColor="#CCCCFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="40dp"
        android:text="æˆ‘çš„ å¿«é€Ÿ HSK"
        android:textSize="25sp"
        android:textColor="#49454F"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/flashcard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#6750A4"
        >

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flashcardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25"
                />

            <Button
                android:id="@+id/flashcard_notes_entry_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:text="ðŸ“"
                android:textSize="35sp"
                android:backgroundTint="#22000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guidelineTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <Button
                android:id="@+id/flashcard_favorite_entry_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:text="â­"
                android:textSize="35sp"
                android:backgroundTint="#22000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guidelineTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <TextView
                android:id="@+id/review_current_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="/"
                android:textSize="18sp"
                android:textColor="#CCCCFF"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/review_prompt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/review_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#55000000"
                android:text="CHOOSE THE CORRECT DEFINITION"
                android:textSize="18sp"
                android:textColor="#CCCCFF"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/flashcard_favorite_entry_button"
                app:layout_constraintBottom_toBottomOf="@id/flashcard_favorite_entry_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/flashcard_main_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="æ±‰å­—"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#CCCCFF"
                android:layout_marginBottom="275dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/guidelineTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <TextView
                android:id="@+id/flashcard_main_term_pinyin_subscript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#CCCCFF"
                android:gravity="center"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/flashcard_main_term"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <Button
                android:id="@+id/flashcard_TTS_button"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:text="ðŸ”Š"
                android:textSize="50sp"
                android:backgroundTint="#22000000"
                app:layout_constraintTop_toBottomOf="@id/flashcard_main_term_pinyin_subscript"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <TextView
                android:id="@+id/flashcard_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#55000000"
                android:text="Chinese characters"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#CCCCFF"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/flashcard_TTS_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <LinearLayout
                android:id="@+id/review_def1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:background="#55000000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/flashcard_TTS_button"
                app:layout_constraintBottom_toTopOf="@id/review_def2_row"
                app:layout_constraintVertical_chainStyle="packed"
                >

                <TextView
                    android:id="@+id/review_definition1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#CCCCFF"
                    />

                <ImageButton
                    android:id="@+id/review_expand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Expand definition"
                    app:tint="#CCCCFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/review_def2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#55000000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/review_def1_row"
                app:layout_constraintBottom_toTopOf="@id/review_def3_row"
                >

                <TextView
                    android:id="@+id/review_definition2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#CCCCFF"
                    />

                <ImageButton
                    android:id="@+id/review_expand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Expand definition"
                    app:tint="#CCCCFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/review_def3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#55000000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/review_def2_row"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/review_definition3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#CCCCFF"
                    />

                <ImageButton
                    android:id="@+id/review_expand3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Expand definition"
                    app:tint="#CCCCFF"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_definition_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0000000"
        android:elevation="16dp"
        android:visibility="gone"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            app:layout_constraintTop_toBottomOf="@id/review_overlay_close"
            >

            <TextView
                android:id="@+id/review_full_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                />

        </ScrollView>

        <Button
            android:id="@+id/review_overlay_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="âœ–"
            android:textSize="30sp"
            android:backgroundTint="#55000000"
            android:textColor="#FF0000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>